               XGURU.AV-LEVEL = xlev 
               XGURU.MENY = XLABEL.MENY 
               XGURU.MENYVART = xhop
               XGURU.MENYOK = TRUE 
               XGURU.ORDNING = XLABEL.ORDNING.       
	    END.
	 END.
