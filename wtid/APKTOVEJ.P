PROCEDURE huvud_UI :
   CREATE tidut.
   ASSIGN 
   SUBSTRING(tidut.UT,4) = "Registrerad övertid dagar med ej full arbetstid för: " + STRING(regar) + " " + regmannamn 
   SUBSTRING(tidut.UT,70) = STRING(TODAY)
   SUBSTRING(tidut.UT,70) = STRING(TODAY)
   SUBSTRING(tidut.UT,80) = STRING(TIME,"HH:MM:SS").
   CREATE tidut.                        
   ASSIGN
   SUBSTRING(tidut.UT,54) = "ÖVERTID".
   CREATE tidut.                        
   ASSIGN
   SUBSTRING(tidut.UT,1) = "ENHET/SIGN"
   SUBSTRING(tidut.UT,7) = "NAMN"   
   SUBSTRING(tidut.UT,35) = "DATUM"  
   SUBSTRING(tidut.UT,45) = "PLUS" 
   SUBSTRING(tidut.UT,52) = "START"
   SUBSTRING(tidut.UT,58) = "SLUT".             
   SUBSTRING(tidut.UT,64) = "BEREDSKAP".             

   CREATE tidut.  
   ASSIGN tidut.UT = str.   
   FOR EACH tidpers USE-INDEX PERSONALKOD NO-LOCK: 
      Guru.GlobalaVariabler:GDPRvem = Guru.GlobalaVariabler:GDPRvem + "," + tidpers.PERSONALKOD.      
      ASSIGN
      persrec = tidpers.TIDPERSREC
      regdatum = bdatum. 
      FIND PERSONALTAB WHERE RECID(PERSONALTAB) = persrec NO-LOCK NO-ERROR. 
      FIND FIRST ANSTFORMTAB WHERE ANSTFORMTAB.ANSTALLNING = PERSONALTAB.ANSTALLNING
      USE-INDEX ANSTF NO-LOCK NO-ERROR.                             

      OPEN QUERY tidq FOR EACH TIDREGITAB WHERE TIDREGITAB.PERSONALKOD = tidpers.PERSONALKOD AND YEAR(TIDREGITAB.DATUM) = regar AND
      MONTH(TIDREGITAB.DATUM) =  regmnr AND TIDREGITAB.OKOD1 NE "" NO-LOCK.
      GET FIRST tidq NO-LOCK.           
      DO WHILE AVAILABLE(TIDREGITAB) TRANSACTION:
         FIND FIRST dagtemp WHERE dagtemp.PERSONALKOD = TIDREGITAB.PERSONALKOD AND dagtemp.DATUM = TIDREGITAB.DATUM NO-LOCK NO-ERROR.
         IF NOT AVAILABLE dagtemp THEN DO:         
            CREATE dagtemp.
            ASSIGN    
            dagtemp.NAMN = SUBSTRING(tidpers.FORNAMN,1,10) + " " + 
            SUBSTRING(tidpers.EFTERNAMN,1,20)
            dagtemp.START =  TIDREGITAB.START
            dagtemp.SLUT =  TIDREGITAB.SLUT            
            dagtemp.OMRADE = tidpers.OMRADE                                 
            dagtemp.PERSONALKOD = TIDREGITAB.PERSONALKOD
            dagtemp.DATUM =  TIDREGITAB.DATUM  .                        
            FOR EACH tidbuff WHERE tidbuff.PERSONALKOD = TIDREGITAB.PERSONALKOD AND
            tidbuff.DATUM = TIDREGITAB.DATUM AND tidbuff.BEREDSKAP NE "" USE-INDEX PSTART NO-LOCK:
              IF TIDREGITAB.START GE tidbuff.BEREDSKAPSTART AND TIDREGITAB.START < tidbuff.BEREDSKAPSLUT THEN dagtemp.BEREDSKAP = TRUE.
            END.
            FIND FIRST FLEXDAG WHERE FLEXDAG.PERSONALKOD = tidpers.PERSONALKOD AND FLEXDAG.DATUM = TIDREGITAB.DATUM NO-LOCK NO-ERROR.
            IF AVAILABLE FLEXDAG THEN DO:               
               dagtemp.FLEX = klock60(klock100(FLEXDAG.PLUS) - klock100(FLEXDAG.FLARB)).
            END.
         END.
         GET NEXT tidq NO-LOCK. 
      END.
   END.
      
      
   sppers = "".
   FOR EACH dagtemp WHERE dagtemp.FLEX < 0 BY dagtemp.PERSONALKOD BY dagtemp.DATUM: 
      
      CREATE tidut.               
      ASSIGN
      SUBSTRING(tidut.UT,1) = dagtemp.PERSONALKOD
      SUBSTRING(tidut.UT,7) = dagtemp.NAMN         
      SUBSTRING(tidut.UT,35) = STRING(dagtemp.DATUM)         
      SUBSTRING(tidut.UT,45) = STRING(dagtemp.FLEX ,"->.99")
      SUBSTRING(tidut.UT,52) = STRING(dagtemp.START ,">>.99")
      SUBSTRING(tidut.UT,58) = STRING(dagtemp.SLUT ,">>.99").
      IF dagtemp.BEREDSKAP = TRUE THEN SUBSTRING(tidut.UT,64) = STRING(dagtemp.BEREDSKAP,"Ja/Nej")  .

   END.
   
   FIND LAST tidut NO-LOCK NO-ERROR.   
END PROCEDURE.
