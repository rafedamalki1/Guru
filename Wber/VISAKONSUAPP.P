   CREATE tidut.   
   ASSIGN  
   SUBSTRING(tidut.UT,1) = 
   "==================================".
   CREATE tidut.   
   ASSIGN  
   SUBSTRING(tidut.UT,1) = bbval.
   CREATE tidut.   
   ASSIGN  
   SUBSTRING(tidut.UT,1) = 
