   DO WHILE AVAILABLE(mtrltemp): 
      {EXCELFEL.I}
      iColumn = iColumn + 1.
      cColumn = STRING(iColumn).      
      IF lista = 1 THEN DO:
         cRange = "A" + cColumn.
         chWorkSheet:Range(cRange):Value = mtrltemp.ENR NO-ERROR.
         cRange = "B" + cColumn.
