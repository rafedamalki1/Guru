      SUBSTRING(tidut.ut,1) = "MENY"
      SUBSTRING(tidut.ut,27) = "BEHÖR.NIVÅ"
      SUBSTRING(tidut.ut,38) = "UNDER-MENY"
      SUBSTRING(tidut.ut,64) = "BEHÖRIG".
      CREATE tidut.                      
      ASSIGN tidut.ut =       

