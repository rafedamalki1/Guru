            CREATE XGURU.
            ASSIGN 
            XGURU.KOPPLING = XLABEL.KOPPLING 
            XGURU.STORKOPPLING = XLABEL.STORKOPPLING
            XGURU.AV-LEVEL = 0 
            XGURU.MENY = XLABEL.MENY 
            XGURU.MENYVART = xhop
            XGURU.MENYOK = TRUE
            XGURU.ORDNING = XLABEL.ORDNING.     
            xlev = 0.
         END.
         REPEAT:
	    /*SKAPAR NYA RADER F™R ALLA NIVER*/
	    FIND FIRST XGURU WHERE XGURU.MENYVART = xhop AND
	    XGURU.AV-LEVEL > xlev
