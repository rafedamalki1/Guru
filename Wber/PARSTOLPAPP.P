/*PARSTOLPAPP.P*/

{PARSTOLP.I}

PROCEDURE ladda_UI :
   DEFINE OUTPUT PARAMETER TABLE FOR parstolptemp.
   EMPTY TEMP-TABLE parstolptemp NO-ERROR. 
   FIND FIRST PARSTOLP NO-LOCK NO-ERROR.
   IF AVAILABLE PARSTOLP THEN DO:
      CREATE parstolptemp.
      BUFFER-COPY PARSTOLP TO parstolptemp.
   END.

END PROCEDURE.

PROCEDURE btnok_UI :
   DEFINE INPUT PARAMETER FILL-IN-1 AS CHARACTER NO-UNDO.
   DEFINE INPUT PARAMETER FILL-IN-2 AS CHARACTER NO-UNDO.
   DEFINE INPUT PARAMETER FILL-IN-3 AS CHARACTER NO-UNDO.
   DEFINE INPUT PARAMETER FILL-IN-TEXT1 AS CHARACTER NO-UNDO.
   DEFINE INPUT PARAMETER FILL-IN-TEXT2 AS CHARACTER NO-UNDO.
   DEFINE INPUT PARAMETER FILL-IN-TEXT3 AS CHARACTER NO-UNDO.
   DO TRANSACTION:
      FIND FIRST PARSTOLP EXCLUSIVE-LOCK NO-ERROR.
      IF NOT AVAILABLE PARSTOLP THEN DO:
         CREATE PARSTOLP.
      END.   
      ASSIGN
      PARSTOLP.A =  FILL-IN-1
      PARSTOLP.B =  FILL-IN-2
      PARSTOLP.C =  FILL-IN-3
      PARSTOLP.AFORKL =  FILL-IN-TEXT1
      PARSTOLP.BFORKL =  FILL-IN-TEXT2
      PARSTOLP.CFORKL =  FILL-IN-TEXT3.
   END.
   RELEASE PARSTOLP NO-ERROR.
   
END PROCEDURE.
