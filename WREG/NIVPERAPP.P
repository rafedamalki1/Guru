            ASSIGN SUBSTRING(tidut.ut,1) = XLABEL.MENY.
            menyut = huvubuff.MENYVART.
         END.
         ASSIGN 
         SUBSTRING(tidut.ut,27) = menyutbuff.MENY
         SUBSTRING(tidut.ut,53) = STRING(menyutbuff.MENYOK,"JA/NEJ").      
         GET NEXT xlxgq NO-LOCK.
      END.
   END.
   
END PROCEDURE.
  
