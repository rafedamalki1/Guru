DEFINE VARIABLE efarg AS INTEGER NO-UNDO.
DEFINE VARIABLE efarg2 AS INTEGER NO-UNDO.

DEFINE VARIABLE nettoh AS HANDLE NO-UNDO.

{EXECLIN.I}
