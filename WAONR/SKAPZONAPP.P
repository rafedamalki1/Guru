/*SKAPZONAPP.P*/
&Scoped-define NEW NEW
&Scoped-define SHARED SHARED
{GLOBVAR2DEL1.I}

{AVTAONRTEMP.I}

PROCEDURE skapzonapph.
   DEFINE INPUT PARAMETER zonvar AS CHARACTER NO-UNDO.
   DEFINE INPUT PARAMETER zonben AS CHARACTER NO-UNDO.
   DEFINE INPUT PARAMETER omr AS CHARACTER NO-UNDO.
   DEFINE OUTPUT PARAMETER brec AS RECID NO-UNDO.
   DO TRANSACTION:
      CREATE ZON.
      ASSIGN
      ZON.ZONNR = zonvar
      ZON.BENAMNING = zonben
      ZON.OMRADE = omr
      brec = RECID(ZON).
   END.
   RELEASE ZON NO-ERROR.
END PROCEDURE.

PROCEDURE zonben.
   DEFINE INPUT PARAMETER brec AS RECID NO-UNDO.
   DEFINE INPUT PARAMETER zonben AS CHARACTER NO-UNDO.
   DO TRANSACTION:
      FIND FIRST ZON WHERE RECID(ZON) = brec EXCLUSIVE-LOCK NO-ERROR.
      ASSIGN
      ZON.BENAMNING = zonben.
   END.
   RELEASE ZON NO-ERROR.
END PROCEDURE.



