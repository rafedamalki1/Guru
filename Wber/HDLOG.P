/* HDLOG.P */

DEFINE INPUT  PARAMETER usrvar AS CHARACTER NO-UNDO.
DEFINE INPUT  PARAMETER bervar AS INTEGER NO-UNDO.
DEFINE INPUT  PARAMETER omrvar AS CHARACTER NO-UNDO.
DEFINE VARIABLE logdir AS CHARACTER NO-UNDO.

DO ON ERROR UNDO, LEAVE:
   logdir = SESSION:TEMP-DIRECTORY + "hdlog.txt".
   OUTPUT TO logdir APPEND.
   PUT SKIP.   
   PUT TODAY " " STRING(TIME,"HH:MM:SS") " Import " usrvar " " bervar " " omrvar  SKIP.
   OUTPUT CLOSE.

   CATCH err AS Progress.Lang.Error :
         
   END CATCH.

END.