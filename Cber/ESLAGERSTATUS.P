   CREATE SERVER hWebService.
   
   
   lReturn = hWebService:CONNECT("-WSDL 'https://www.elektroskandia.se/service/ExternKundService.asmx?wsdl' -servername 'www.elektroskandia.se'") .
   IF lReturn = NO THEN DO:         
