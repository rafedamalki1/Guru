
DEFINE VARIABLE MyWavFile AS CHARACTER NO-UNDO.
DEFINE VARIABLE MyInt AS INTEGER NO-UNDO.

/* Used as needed to play sound (.WAV) files */
&GLOB SND_ASYNC 1
&GLOB SND_NODEFAULT 2
&GLOB SND_APPLICATION 128
&GLOB SND_ALIAS 65536
&GLOB SND_FILENAME 131072
&GLOB SND_RESOURCE 262148

PROCEDURE PlaySoundA EXTERNAL "winmm.dll" :
DEFINE INPUT PARAMETER pszSound AS CHAR.
DEFINE INPUT PARAMETER hmod AS LONG.
DEFINE INPUT PARAMETER fdwSound AS LONG.
DEFINE RETURN PARAMETER ReturnValue AS LONG.
END PROCEDURE.

MyWavFile = SEARCH("BILDER\chimes.wav").

RUN PlaySoundA(MyWavFile, 0, {&SND_FILENAME}, OUTPUT MyInt).
