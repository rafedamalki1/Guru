DO ON ERROR   UNDO MAIN-BLOCK, LEAVE MAIN-BLOCK
   ON END-KEY UNDO MAIN-BLOCK, LEAVE MAIN-BLOCK:  
   
    DISPLAY BTN_OVER BRW_HLEV conappvar FILL-IN-BEN 
      WITH FRAME FRAME-MTRL IN WINDOW WINDOW-3.
  ENABLE BTN_OVER BRW_HLEV FILL-IN-BEN  conappvar
      WITH FRAME FRAME-MTRL IN WINDOW WINDOW-3.

   IF NOT THIS-PROCEDURE:PERSISTENT THEN
   WAIT-FOR CLOSE OF THIS-PROCEDURE.
END.


PROCEDURE over_UI :
    FIND FIRST mtrltemp.
    RUN xUPPANT2V.W (INPUT ROWID(mtrltemp)).
END PROCEDURE.
            
PROCEDURE initsok_UI :
  DEFINE INPUT  PARAMETER vad AS INTEGER    NO-UNDO.
  EMPTY TEMP-TABLE valsoktemp NO-ERROR. 
  IF vad = 1 THEN DO:
     CREATE valsoktemp.
     ASSIGN 
     valsoktemp.SOKCHAR[1] = "mtrl"     /*Skarp tabell*/
     valsoktemp.SOKCHAR[2] = ""   /*Öppningsquery*/
     valsoktemp.SOKCHAR[3] = "enr" /*sökfält*/
     valsoktemp.SOKCHAR[4] = "MTRLROW"  /*temptabells faltnamn för rowid*/
     valsoktemp.SOKCHAR[5] = FILL-IN-BEN + "*".      /*sök på*/       
  END.
END PROCEDURE.



